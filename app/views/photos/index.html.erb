<div style="margin-bottom:12px;">
  <%= button_to "ログアウト", logout_path, method: :delete, class: "btn btn-outline-danger" %>
</div>

<h1>写真一覧</h1>

<% if flash[:notice] %>
  <p style="color:green;"><%= flash[:notice] %></p>
<% end %>

<% if flash[:alert] %>
  <p style="color:red;"><%= flash[:alert] %></p>
<% end %>

<div>
  <% if @oauth_connected %>
    <button
      disabled class="btn btn-success">TweetAppと連携済み</button>
  <% else %>
    <%= link_to "TweetAppと連携", oauth_authorize_url %>
  <% end %>
</div>

<div style="margin-bottom:12px;">
  <%= link_to "写真をアップロード", new_photo_path, class: "btn btn-primary" %>
</div>

<div class="gallery">
  <% @photos.each do |photo| %>
    <div class="photo-card">
      <div class="photo-title"><%= h(photo.title) %></div>

      <%= image_tag photo.image,
      alt: photo.title,
      style: "width:200px;height:150px;object-fit:contain;border-radius:4px;" %>

      <div style="margin-top: 8px;">
        <%= button_to "ツイートする",
        tweet_photo_path(photo),
        method: :post,
        class: "tweet-button" %>
      </div>

    </div>
  <% end %>
</div>

<style>
  .gallery {
    display: grid;
    grid-template-columns: repeat(8, 1fr); /* 横に8枚 */
    gap: 12px;
  }

  .photo-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    border: 1px solid #ddd;
    border-radius: 6px;
    padding: 8px;
    background-color: #fff;
  }

  .photo-title {
    font-weight: bold;
    font-size: 14px;
    margin-bottom: 6px;
    text-align: center;
    word-break: break-word;
  }

  .photo-img {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 4px;
  }
</style>
