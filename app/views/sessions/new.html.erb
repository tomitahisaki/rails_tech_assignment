<h1>ログイン</h1>

<%= form_with url: login_path, method: :post, local: true do %>
  <div>
    <%= label_tag :email, "メールアドレス" %><br>
    <%= email_field_tag :email, params[:email], autofocus: true %>
  </div>

  <div style="margin-top:10px;">
    <%= label_tag :password, "パスワード" %><br>
    <%= password_field_tag :password, nil %>
  </div>

  <div style="margin-top:15px;">
    <%= submit_tag "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>

<% if @errors.present? %>
  <ul style="color:red;">
    <% @errors.each do |error_message| %>
      <li><%= error_message %></li>
    <% end %>
  </ul>
<% end %>

<% if flash[:notice] %>
  <p style="color:green;"><%= flash[:notice] %></p>
<% end %>
